<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".sensorTesting.SensorTestingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SENSOR TESTING"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>



    <LinearLayout
        android:id="@+id/layout_sensors_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp">

        <Button
            android:id="@+id/btn_test_proximity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proximity"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.33"
            android:backgroundTint="#DC128B"/>

        <Button
            android:id="@+id/btn_test_accelero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="accelero"
            android:layout_weight="0.37"
            android:backgroundTint="#DC128B"/>


        <Button
            android:id="@+id/btn_test_gps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gps"
            android:layout_weight="0.37"
            android:backgroundTint="#DC128B"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="NEXT"
        android:layout_gravity="end"/>



</LinearLayout>