<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/report_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firebasepdfactivity.ReportGenerateActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FINAL REPORT"
        android:layout_marginTop="10dp"
        android:textSize="48sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:padding="12dp"
            android:layout_gravity="center"
            android:text="MICROPHONE TEST"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/text_microphone_grade"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_gravity="center"
            android:text="PASS"
            android:layout_marginStart="15dp"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/img_microphone_marked"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"

            android:src="@drawable/ic_marked_pass"
            android:layout_marginStart="30dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:padding="12dp"
            android:layout_gravity="center"
            android:text="CAMERA TEST"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text_camera_grade"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_gravity="center"
            android:text="PASS"
            android:layout_marginStart="15dp"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/img_camera_marked"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_marked_fail"
            android:layout_marginStart="30dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:padding="12dp"
            android:layout_gravity="center"
            android:text="SENSOR TEST"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text_sensor_grade"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_gravity="center"
            android:text="PASS"
            android:layout_marginStart="15dp"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/img_sensor_marked"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_marked_pass"
            android:layout_marginStart="30dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:padding="12dp"
            android:layout_gravity="center"
            android:text="ROOT TEST"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text_root_grade"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_gravity="center"
            android:text="PASS"
            android:layout_marginStart="15dp"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/img_root_marked"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_marked_fail"
            android:layout_marginStart="30dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:padding="12dp"
            android:layout_gravity="center"
            android:text="BLUETOOTH TEST"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/text_bluetooth_grade"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:layout_gravity="center"
            android:text="PASS"
            android:layout_marginStart="15dp"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/img_bluetooth_marked"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_marked_pass"
            android:layout_marginStart="30dp"/>



    </LinearLayout>

    <RadioGroup
        android:layout_marginTop="20dp"
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RadioButton

            android:id="@+id/radio_btn_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Generate PDF"/>

        <RadioButton
            android:id="@+id/radio_btn_upload_firebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload to Firebase"
            android:layout_weight="1"
            />

    </RadioGroup>

    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Proceed"/>


</LinearLayout>